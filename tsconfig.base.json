{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "composite": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "paths": {
      "@ctrlplane/common/activities": ["packages/common/src/activities.ts"],
      "@ctrlplane/common/models": ["packages/common/src/models.ts"],
      "@ctrlplane/common/names": ["packages/common/src/names.ts"],
      "@ctrlplane/common/utils": ["packages/common/src/utils/index.ts"],
      "@ctrlplane/common/workflows": ["packages/common/src/workflows.ts"],
      "@ctrlplane/workflows/env-ctrl": ["packages/workflows/env-ctrl/src/index.ts"],
      "@ctrlplane/workflows/env-ctrl/workflows": ["packages/workflows/env-ctrl/src/workflows.ts"]
    }
  },
  "exclude": ["node_modules"]
}
