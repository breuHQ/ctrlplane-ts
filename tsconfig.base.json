{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "composite": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "paths": {
      "@ctrlplane/common/*": ["packages/common/src/*"],
      "@ctrlplane/workflows/*": ["packages/workflows/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
