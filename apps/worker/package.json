{
  "name": "@ctrlplane/worker",
  "version": "0.0.1",
  "description": "The very first worker",
  "engines": {
    "node": ">= 16.13 <17"
  },
  "type": "module",
  "scripts": {
    "predev": "node ./build.dev.js",
    "dev": "nodemon ./build/worker.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "node ./build.js",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts"
  },
  "author": "Yousuf Jawwad <yousuf@breu.io>",
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/triple-beam": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "concurrently": "^7.1.0",
    "esbuild": "^0.14.39",
    "nanoid": "^3.3.4",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.1",
    "tslib": "~2.3.1",
    "typescript": "~4.6"
  },
  "volta": {
    "node": "16.13.0"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.16.3",
    "factory.ts": "^1.2.0",
    "rxjs": "^7.5.5",
    "temporalio": "^0.22.0",
    "triple-beam": "^1.3.0",
    "util": "^0.12.4",
    "winston": "^3.7.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "verbose": true,
    "watch": [
      "build/**/*.js"
    ],
    "ignore": [
      "*.js.map,",
      "*.d.ts"
    ],
    "ext": "js"
  }
}
